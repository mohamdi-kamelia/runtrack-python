def moyenne (noteA , noteB , noteC):
    """moyenne des élève """
    return (noteA + noteB + noteC) / 3

#demande à l'utilisateur
noteA = float(input("Entrez la première note : "))
noteB = float(input("Entrez la deuxième note : "))
noteC = float(input("Entrez la troisième note : "))
#calcule de moyenne
moyenne_etudiant = moyenne(noteA,noteB,noteC)
print("La moyenne de l'étudiant est :", moyenne_etudiant)
#les conditions
if 15 <= moyenne_etudiant <= 20:
    print("Très bon élève")
elif 11 <= moyenne_etudiant <= 14:
    print("Bon élève")
elif 8 <= moyenne_etudiant <= 10:
    print("Élève moyen")
elif 0 <= moyenne_etudiant <= 7:
    print("Élève devant faire des efforts")
else:
    print("message d'erreur")
